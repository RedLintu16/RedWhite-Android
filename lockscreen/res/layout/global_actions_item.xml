<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:background="@drawable/global_action_card_background"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/action_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:tint="@color/global_action_card_tint"
            android:src="@drawable/ic_power_shutdown"
            android:contentDescription="@string/global_action_power_off"/>

        <TextView
            android:id="@+id/action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/global_action_card_tint"
            android:text="@string/global_action_power_off"
            android:textSize="14sp"
            android:fontFamily="@font/Raleway-Medium"/>
    </LinearLayout>
</FrameLayout>
