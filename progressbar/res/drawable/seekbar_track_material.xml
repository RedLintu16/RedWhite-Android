<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@*android:id/background" android:gravity="fill_horizontal|center">
        <shape android:shape="rectangle">
            <solid android:color="#22FFFFFF" />
            <corners android:radius="2dp" />
            <size android:height="4dp" />
        </shape>
    </item>

    <item android:id="@*android:id/secondaryProgress" android:gravity="fill_horizontal|center">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <solid android:color="#66FFCDD2" /> <!-- faint red -->
                <corners android:radius="2dp" />
                <size android:height="4dp" />
            </shape>
        </scale>
    </item>

    <item android:id="@*android:id/progress" android:gravity="fill_horizontal|center">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <solid android:color="#FFCC0000" /> <!-- pure red accent -->
                <corners android:radius="2dp" />
                <size android:height="4dp" />
            </shape>
        </scale>
    </item>
</layer-list>
