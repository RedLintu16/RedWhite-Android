<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base classic theme -->
    <style name="SuwThemeClassic">
        <item name="android:colorBackground">#FFFFFFFF</item>
        <item name="android:textColorPrimary">#FF000000</item>
        <item name="android:colorAccent">#FFD60000</item>
        <item name="android:colorControlActivated">#FFD60000</item>
        <item name="android:colorButtonNormal">#FFD60000</item>
    </style>

    <!-- Light / Dark variants (same palette for flat look) -->
    <style name="SuwThemeClassic.Light" parent="@style/SuwThemeClassic" />
    <style name="SuwThemeClassic.Dark" parent="@style/SuwThemeClassic" />

    <!-- Glif themes forced to map to classic -->
    <style name="SuwThemeGlifV3.Light" parent="@style/SuwThemeClassic.Light" />
    <style name="SuwThemeGlifV3.Dark" parent="@style/SuwThemeClassic.Dark" />
    <style name="SuwThemeGlifV4.Light" parent="@style/SuwThemeClassic.Light" />
    <style name="SuwThemeGlifV4.Dark" parent="@style/SuwThemeClassic.Dark" />

</resources>
